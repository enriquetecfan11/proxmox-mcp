# Configuración del Servidor Proxmox
PROXMOX_HOST=tu-servidor-proxmox.com
PROXMOX_PORT=8006

# Método de Autenticación (token o password)
PROXMOX_AUTH_METHOD=token

# Autenticación por API Token (recomendado)
PROXMOX_TOKEN=user@pam!tokenid=tu-token-aqui

# Autenticación por Usuario/Contraseña (alternativa)
# PROXMOX_USERNAME=tu-usuario@pam
# PROXMOX_PASSWORD=tu-contraseña

# Configuración SSL
# Establecer en false para ignorar certificados SSL autofirmados
PROXMOX_REJECT_UNAUTHORIZED=true

